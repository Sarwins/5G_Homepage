    </div>
    
    <div class="modal fade" id="img-modal">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="text-center p-5">
                <img class="img-fluid" src="/images/member/noimg.jpg" id="modal_img" alt="" width="100%">
            </div> 
        </div>
      </div>
    </div>
    <footer>
        <% include ../include/footer %>
    </footer>
</body>
</html>
<script>
    var img_modal = document.getElementById('img-modal')
    img_modal.addEventListener('show.bs.modal', function (event) {
  
    var click_img = event.relatedTarget
  
    var img_src = click_img.getAttribute('data-bs-name')
  
    document.getElementById('modal_img').src = ("/images/"+img_src);

})
</script>