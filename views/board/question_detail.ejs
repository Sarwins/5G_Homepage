        <div div class="col-sm-10 ml-5">
            <div class="text-center mb-5">
              <h1>Q&A 게시판</h1>
            </div>
            <form method="POST" name="form">
            <table class="table mt-5 fs-3">
              <thead>
                <tr>
                  <th class ="text-center" scope="col" width="10%"><%= q_num %>번</th>
                  <th class ="text-center"scope="col"width="60%"><%= result[q_num-1].title %></th>
                  <th class ="text-center" scope="col" width="10%">작성자 : <%= result[q_num-1].user_id %></th>
                  <th class ="text-center" scope="col" width="20%">작성날짜 : <%= dayjs(result[q_num-1].writer_date).format('YY.MM.DD'); %></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="text-center mt-5 fs-1 p-5"colspan="4"><%= result[q_num-1].content %></td>
                </tr>
              </tbody>
             </table>

             <div class="text-right fs-2">
                <input type ="button" value="목록" onclick="location.href='/board/question/1'"/>
                <input type ="button" value="수정" onclick="location.href='/board/question/update/<%= q_num%>'"/>
                <input type ="submit" value="삭제" onclick="javascript: form.action='/board/question/delete'"/>
                <input type="hidden" name="titlex" value="<%= result[q_num-1].title%>"/>
                <input type="hidden" name="writerx" value="<%= result[q_num-1].user_id%>"/>
                <input type="hidden" name="contentx" value="<%= result[q_num-1].content%>"/>
                
              </form>
              <br><br>
              
          </div>

