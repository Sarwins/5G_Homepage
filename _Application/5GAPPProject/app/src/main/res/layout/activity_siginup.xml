<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/sigin_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:text="5G 회원가입" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/id_table"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/sigin_title_text"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/id_sign_input"
                android:hint="아이디"
                android:textColorHint="#9E9898"
                android:backgroundTint="#9E9898"
                android:textColor="#9E9898" />


        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sigin_title_text"
        android:layout_toRightOf="@id/id_table"
        android:layout_marginTop="20dp"
        android:text="ID 중복검사"
        android:textColor="#FFFFFF"
        android:id="@+id/dupliButton"
        android:textAllCaps="false"
        android:background="@drawable/dupli_round"
        />




    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pw_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/id_table"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:id="@+id/pw_sign_input"
                android:hint="비밀번호"
                android:textColorHint="#9E9898"
                android:backgroundTint="#9E9898"
                android:textColor="#9E9898" />

        </TableRow>

    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pw_ch_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/pw_table"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:id="@+id/pw_ch_sign_input"
                android:hint="비밀번호 확인"
                android:textColorHint="#9E9898"
                android:backgroundTint="#9E9898"
                android:textColor="#9E9898" />

        </TableRow>

    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/name_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/pw_ch_table"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:id="@+id/name_input"
                android:hint="이름"
                android:textColorHint="#9E9898"
                android:backgroundTint="#9E9898"
                android:textColor="#9E9898" />

        </TableRow>

    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phone_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/name_table"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:id="@+id/phone_input"
                android:hint="전화번호"
                android:textColorHint="#9E9898"
                android:backgroundTint="#9E9898"
                android:textColor="#9E9898" />

        </TableRow>

    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/email_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/phone_table"
        android:background="@drawable/border_round"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:id="@+id/email_input"
                android:hint="이메일"
                android:textColorHint="#9E9898"
                android:backgroundTint="#9E9898"
                android:textColor="#9E9898" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/email_table"
        android:gravity="center"
        android:textSize="13dp"
        android:text="이메일로 인증 메일이 발송되므로 정확한 이메일 주소를 입력해주세요" />

    <CheckBox
        android:id="@+id/info_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UIT LAB 이용약관 및 개인 정보 취급방침 확인후 동의해주세요"
        android:textColor="#000000"
        android:buttonTint="#000000"
        android:layout_marginTop="15dp"
        android:layout_below="@id/email_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="등록하기"
        android:textColor="#FFFFFF"
        android:id="@+id/loginButton"
        android:textAllCaps="false"
        android:background="@drawable/border_round2"
        android:layout_below="@id/info_checkbox"/>

</RelativeLayout>