<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.1dp"
                android:color="#00BCD4"/>
            <corners android:radius="10dp"/> <!-- 모서리 기울기 -->
            <solid android:color="#00BCD4"/><!-- 배경색 -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>

    <item android:top="0.1dp" android:bottom="0.1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.1dp"
                android:color="#FFFFFF"/>
            <corners android:radius="10dp"/> <!-- 모서리 기울기 -->
            <solid android:color="#FFFFFF"/><!-- 배경색 -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>
