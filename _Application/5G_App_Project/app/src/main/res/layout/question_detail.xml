<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/question_detail_exit_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_exit" />

    <TextView
        android:id="@+id/question_detail_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_detail_title_main"
        android:layout_toRightOf="@id/question_detail_exit_button"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="7dp"
        android:textSize="20dp"
        android:background="#fff"
        android:textStyle="bold" />


    <Button
        android:id="@+id/question_delete_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/question_border_round"
        android:layout_alignParentEnd="true"
        android:text="@string/question_detail_delete_button"
        android:textSize="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:textColor="#fff"
        android:textStyle="bold"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question_detail_table"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_round"
        android:layout_below="@id/question_detail_subtitle"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/question_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="No.1"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question_detail_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="작성자 : 송준하"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/question_detail_writer"
                android:layout_weight="1"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="TITLE" />
            <TextView
                android:id="@+id/question_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/question_detail_title"
                android:text="2020-01-18"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/question_detail_soild"
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_below="@id/question_detail_date"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#989898"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/question_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/question_detail_soild"
                android:text="content"
                android:textSize="15dp"
                android:textColor="#494949"
                android:textStyle="bold"/>
        </RelativeLayout>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question_detail_table2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/question_manager_border_round"
        android:layout_below="@id/question_detail_table"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout>
            <TextView
                android:id="@+id/question_detail_manager_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="2020-01-18"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question_detail_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="작성자 : 관리자"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/question_detail_manager_soild"
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_below="@id/question_detail_manager_date"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#989898"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/question_detail_manager_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/question_detail_manager_soild"
                android:text="content"
                android:textSize="15dp"
                android:textColor="#494949"
                android:textStyle="bold"/>


        </RelativeLayout>
    </TableLayout>
</RelativeLayout>