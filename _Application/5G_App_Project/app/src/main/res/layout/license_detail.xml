<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/license_detail_exit_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_exit" />

        <TextView
            android:id="@+id/license_detail_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/license_detail_exit_button"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:background="#fff"
            android:textStyle="bold" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/license_detail_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_round"
            android:layout_below="@id/license_detail_subtitle"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout>
                <TextView
                    android:id="@+id/license_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="제 1 호"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/license_detail_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/license_detail_division_name"
                    android:text="구분 : "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/license_detail_division_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="특허"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/license_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_below="@id/license_detail_division_name"
                    android:layout_centerHorizontal="true"
                    android:text="특허"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout>
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:text="출원국"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:text="소유 기관"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:id="@+id/license_detail_country"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:text="Android"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/license_detail_Subjectivity_agency"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:text="해양 IT 연구소"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/license_detail_paper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginRight="1dp"
                            android:text="사업 연도"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/license_detail_Research_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="5G 연구 목표"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/invert_name"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="80dp"
                            android:paddingBottom="90dp"
                            android:layout_marginRight="1dp"
                            android:layout_width="wrap_content"
                            android:text="발명 명칭"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/license_detail_Research_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="80dp"
                            android:paddingBottom="90dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="5G 연구 내용"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:paddingTop="30dp"
                            android:paddingBottom="30dp"
                            android:text="출원 등록 기관"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/license_detail_Expectation_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:paddingBottom="30dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="5G 기대 성과"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="1dp"
                            android:text="출원일"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/license_detail_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="2020-02-02"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>
                    <RelativeLayout>

                        <TextView
                            android:id="@+id/license_detail_manager_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_toLeftOf="@id/license_detail_manager"
                            android:text="발명자 : "
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/license_detail_manager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentEnd="true"
                            android:text="송준하"
                            android:textSize="12sp"/>

                    </RelativeLayout>
                </TableLayout>
            </RelativeLayout>


        </TableLayout>
    </RelativeLayout>

</ScrollView>
