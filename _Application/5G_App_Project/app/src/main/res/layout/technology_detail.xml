<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/technology_detail_exit_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_exit" />

        <TextView
            android:id="@+id/technology_detail_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/technology_detail_exit_button"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:background="#fff"
            android:textStyle="bold" />


        <TableLayout
            android:id="@+id/technology_detail_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_round"
            android:layout_below="@id/technology_detail_subtitle"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout>
                <TextView
                    android:id="@+id/technology_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="제 1 호"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/technology_detail_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/technology_detail_division_name"
                    android:text="기술활용형태 : "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/technology_detail_division_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="기술이전"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/technology_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_below="@id/technology_detail_division_name"
                    android:layout_centerHorizontal="true"
                    android:text="기술이전"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout>
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:text="사업년도"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:text="소유기관"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소유기관유형"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:id="@+id/technology_detail_business_year"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:text="Android"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/technology_detail_rai_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:text="해양 IT 연구소"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/technology_detail_rai_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UIT LAB"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/technology_detail_paper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:stretchColumns="*"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginRight="1dp"
                            android:text="기술실시계약연도"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/technology_detail_tech_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="5G 연구 목표"
                            android:background="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="70dp"
                            android:paddingBottom="70dp"
                            android:layout_marginRight="1dp"
                            android:text="기술실시계약명"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/technology_detail_tech_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="70dp"
                            android:paddingBottom="70dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="5G 연구 내용 "
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:paddingTop="30dp"
                            android:paddingBottom="30dp"
                            android:text="기술실시대상국가"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/technology_detail_tech_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:paddingBottom="30dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="5G 기대 성과"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:background="#ffffff"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="기술료계약체결일자"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/technology_detail_techcontract_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="2020-02-02"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="1dp"
                            android:text="기술실시방식"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/technology_detail_ti_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_span="5"
                            android:layout_marginRight="1dp"
                            android:text="2020-02-02"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="1dp"
                            android:text="기술실시내용"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/technology_detail_ti_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_span="5"
                            android:background="#ffffff"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="KOREA"
                            android:textSize="12sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="1dp"
                            android:text="기술실시대상기관명"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/technology_detail_tiinstitution_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_span="5"
                            android:background="#ffffff"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="KOREA"
                            android:textSize="12sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="1dp"
                            android:text="기술사업자등록번호"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/technology_detail_ti_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_span="5"
                            android:background="#ffffff"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="KOREA"
                            android:textSize="12sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:padding="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="1dp"
                            android:text="기술실시대상기관유형"
                            android:background="#ffffff"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/technology_detail_ti_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_span="5"
                            android:background="#ffffff"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="KOREA"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>


        </TableLayout>
    </RelativeLayout>
</ScrollView>