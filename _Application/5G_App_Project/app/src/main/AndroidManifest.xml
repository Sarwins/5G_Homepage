<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a5g_app_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".Splash"
            android:launchMode="singleTask"
            android:label="5G App"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".IntroduceActivity"/>
        <activity android:name=".BusinessActivity"/>
        <activity android:name=".SearchActivity"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpAcitivity" />
        <activity android:name=".HomepageActivity" />
        <activity android:name=".MapActivity" />
        <activity android:name=".PostActivity" />
        <activity android:name=".PostMainActivity" />
        <activity android:name=".PostDetailActivity" />
        <activity android:name=".NoticeActivity" />
        <activity android:name=".NoticeMainActivity" />
        <activity android:name=".NoticeDetailActivity" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".QuestionMainActivity" />
        <activity android:name=".QuestionDetailActivity" />
        <activity android:name=".TreatiseMainActivity" />
        <activity android:name=".TreatiseDetailActivity" />
        <activity android:name=".licenseDetailActivity" />
        <activity android:name=".SoftwareDetailActivity" />
        <activity android:name=".StandardDetailActivity" />
        <activity android:name=".TechnologyDetailActivity" />

    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>